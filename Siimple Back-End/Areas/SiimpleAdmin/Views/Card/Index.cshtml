@model List<Card>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a>content</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Card card in Model)
                        {
                            <tr>
                                <td>
                                    @card.Id
                                </td>
                                <td>

                                    <img src="~/assets/Image/Service/@card.Inage" alt="Alternate Text" />
                                </td>
                                <td>
                                    <i class="@card.Icon"></i>
                                    @card.Icon
                                </td>
                                <td>
                                    @card.Title
                                </td>
                                <td>
                                    @if (card.SubTitle.Length > 30)
                                    {
                                        @(card.SubTitle.Substring(0,30) + "...");
                                    }
                                    else
                                    {
                                        @card.SubTitle
                                    }
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div>
                                            <a asp-controller="Card" asp-action="Detail" asp-route-id="@card.Id" class="btn btn-primary">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Card" asp-action="Edit" asp-route-id="@card.Id" class="btn btn-success">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Card" asp-action="Delete" asp-route-id="@card.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

